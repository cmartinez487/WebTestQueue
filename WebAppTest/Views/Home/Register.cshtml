@model RegisterViewModel
<h1>@ViewData["Title"]</h1>
<h4>@ViewData["mensaje"]</h4>

@using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="container p-4">
        <div class="col-sm-6 col-md-4">
            @Html.AntiForgeryToken()
            <h4>Registre una Nueva Solicitud</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Dni, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Dni, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="container p-2">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button id="add-client" type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </div>
        </div>
    </div>
}